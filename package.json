{
    "name": "mbo",
    "description": "MtG Binder Organizer",
    "license": "UNLICENSED",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "node": "^24.11.0",
        "npm": "^11.3.0"
    },
    "author": {
        "name": "Sven Scharfenberg",
        "email": "sscharfenberg@pm.me"
    },
    "scripts": {
        "dev": "npm run preinstall && vite --host",
        "build": "npm run preinstall && npm run lint && run-p type-check \"build-only {@}\" -- && npm run icons",
        "preview": "npm run preinstall && vite preview --host",
        "build-only": "vite build",
        "type-check": "vue-tsc --build",
        "lint": "eslint 'resources/app/**/*.{js,ts,vue}' --fix && stylelint 'resources/app/**/*.{vue,scss}' --fix --quiet-deprecation-warnings",
        "icons": "node ./resources/build/icons.js -v -i",
        "format": "prettier --write resources/app/**/*",
        "preinstall": "node ./resources/build/checkNodeVersion.js"
    },
    "dependencies": {
        "@inertiajs/vue3": "^2.3.6",
        "@sscharfenberg/progressbar": "^0.1.2",
        "normalize.css": "^8.0.1",
        "vue": "^3.5.18"
    },
    "devDependencies": {
        "@tsconfig/node24": "^24.0.1",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^25.0.3",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "chalk": "^5.5.0",
        "eslint": "^9.33.0",
        "eslint-plugin-vue": "^10.6.2",
        "jiti": "^2.5.1",
        "jsdom": "^27.0.1",
        "laravel-vite-plugin": "^2.0.1",
        "minimist": "^1.2.8",
        "npm-run-all2": "^8.0.4",
        "prettier": "3.7.4",
        "prettier-plugin-organize-imports": "^4.2.0",
        "sass-embedded": "^1.90.0",
        "semver": "^7.7.2",
        "start-server-and-test": "^2.0.13",
        "stylelint": "^16.23.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-config-standard-vue": "^1.0.0",
        "stylelint-order": "^7.0.0",
        "stylelint-scss": "^6.12.1",
        "svgo": "^4.0.0",
        "svgstore": "^3.0.1",
        "typescript": "~5.9.2",
        "vite": "^7.1.2",
        "vite-plugin-vue-devtools": "^8.0.0",
        "vue-tsc": "^3.0.5"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "singleAttributePerLine": false,
        "plugins": [
            "prettier-plugin-organize-imports"
        ],
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "overrides": [
            {
                "files": "**/*.yml",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    }
}
